            </column>
            <column name="blog_author" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="blog_category" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

